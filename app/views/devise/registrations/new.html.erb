<%= render "shared/second_header" %>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>

<div class='form-wrap'>
        <div class='form-header'>
           <h1 class='form-header-text'>
             アカウント作成
           </h1>
        </div>
         <p class='login-way'>次の方法で登録する</p>
        <div class='sns-login'>
           <%= link_to user_facebook_omniauth_authorize_path, method: :post do %>
             <div class='facebook'>
               <%= image_tag '/images/f_logo72.png',:size => '35x35' ,class:'facebook-logo' %>
               <p class="facebook-link">Facebook</p>
             </div> 
           <% end %>
           <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post do %>
             <div class="google">
               <%= image_tag '/images/btn_google.png',:size => '40x40' ,class:'google-logo' %>
               <p class="google-link">Google</p>
             </div>
           <% end %>
        </div>
         <p class='login-way'>または</p>
        <div class='form-group'>
          <div class='form-text-wrap'>
            <label class="form-text">名前</label>
            <span class='indispensable'>必須</span>
          </div>
          <%= f.text_field :name, class:"account-input", id:"name", placeholder:"例) 田中太郎", maxlength:"40" %>
        </div>
        <div class='form-group'>
          <div class='form-text-wrap'>
            <label class="form-text">Eメール</label>
            <span class='indispensable'>必須</span>
          </div>
          <%= f.email_field :email, class:"account-input", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
        </div>
      <% if @sns_id.present? %>
        <%= hidden_field_tag :sns_auth, true %>
      <% else %>
        <div class='form-group'>
          <div class='form-text-wrap'>
            <label class="form-text">パスワード</label>
            <span class='indispensable'>必須</span>
          </div>
          <%= f.password_field :password, class:"account-input", id:"password", placeholder:"8文字以上の半角英数字" %>
          <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
        </div>
        <div class='form-group'>
          <div class='form-text-wrap'>
            <label class="form-text">パスワード確認</label>
            <span class='indispensable'>必須</span>
          </div>
          <%= f.password_field :password_confirmation, class:"account-input", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
        </div>
      <% end %>
        <div class='form-group'>
          <div class='btn-content'>
            <%= f.submit "作成する" , class:"submit-btn" %>
            <%= link_to '戻る', root_path, class:"submit-btn" %>
          </div>
        </div>
      </div>
    <% end %>
<%= render "shared/footer"%>