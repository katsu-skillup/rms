<%= render "shared/second_header" %>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>

<div class='form-wrap'>
        <div class='form-header'>
           <h1 class='form-header-text'>
             アカウント作成
           </h1>
        </div>
        <div class='form-group'>
          <div class='form-text-wrap'>
            <label class="form-text">名前</label>
            <span class='indispensable'>必須</span>
          </div>
          <%= f.text_area :name, class:"account-input", id:"name", placeholder:"例) 田中太郎", maxlength:"40" %>
        </div>
        <div class='form-group'>
          <div class='form-text-wrap'>
            <label class="form-text">Eメール</label>
            <span class='indispensable'>必須</span>
          </div>
          <%= f.email_field :email, class:"account-input", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
        </div>
        <div class='form-group'>
          <div class='form-text-wrap'>
            <label class="form-text">パスワード</label>
            <span class='indispensable'>必須</span>
          </div>
          <%= f.password_field :password, class:"account-input", id:"password", placeholder:"8文字以上の半角英数字" %>
          <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
        </div>
        <div class='form-group'>
          <div class='form-text-wrap'>
            <label class="form-text">パスワード確認</label>
            <span class='indispensable'>必須</span>
          </div>
          <%= f.password_field :password_confirmation, class:"account-input", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
        </div>
        <div class='form-group'>
          <div class='btn-content'>
            <%= f.submit "作成する" , class:"submit-btn" %>
            <%= link_to '戻る', root_path, class:"submit-btn" %>
          </div>
        </div>
      </div>
    <% end %>
<%= render "shared/footer"%>