<%= render "shared/header" %>
  
  <div class='members-show'>
          <div class='members-box'>
           <div class='member-table-explanation'>
              <span class='index-title'><%= current_user.name %>様の管理Member一覧</span>
           </div>
           <div class='member-menu'>
              <ul class='member-menu-list'>
                <li><%= link_to 'トップページ', root_path, class:"submit-btn" %></li>
                <li><%= link_to 'Member登録', new_member_path, class:"submit-btn" %></li>
              </ul>
           </div>
           <table class='members-table'>
             <thead>
               <tr>
                 <th class='member-item'>氏名</th>
                 <th class='member-item'>所属</th>
                 <th class='member-item'>役職</th>
                 <th class='member-item'>職務内容</th>
                 <th class='member-item'>総合評価</th>
                 <th class='member-item'>コミュニケーション能力</th>
                 <th class='member-item'>リーダーシップ</th>
                 <th class='member-item'>スキル</th>
                 <th class='member-item'>モチベーション</th>
               </tr>
             </thead>
             <tbody>
           <% @members.each do |member| %>
                <tr>
                 <td class='member-information'><%= member.member_name %></td>   
                 <td class='member-information'><%= member.organization %></td>   
                 <td class='member-information'><%= member.position %></td>   
                 <td class='member-information'><%= member.work_info %></td>   
                 <td class='member-value'><%= member.valuation.name %></td>   
                 <td class='member-value'><%= member.communication %></td>   
                 <td class='member-value'><%= member.leadership %></td>   
                 <td class='member-value'><%= member.skill %></td>   
                 <td class='member-value'><%= member.motivation %></td>   
                </tr>
            <% end %>
             </tbody>
           </table>
          </div>
        </div>

<%= render "shared/footer" %>